{
  "name": "carousel",
  "version": "0.1.0",
  "main": "src/js/index.js",
  "private": true,
  "repository": "git@github.com:stevengrimaldo/carousel.git",
  "author": "Steven Grimaldo <srgrimaldo@me.com>",
  "license": "MIT",
  "scripts": {
    "prestart": "cpx 'src/media/fonts/*' dist/media/fonts",
    "start": "parcel src/index.html --open"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "> 1%",
              "last 2 versions",
              "not ie <= 10"
            ]
          }
        }
      ],
      "stage-2"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "globals": {
      "PWD": true,
      "ENV": true,
      "envMode": true,
      "envUrls": true,
      "document": true,
      "window": true
    },
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "parser": "babel-eslint",
      "sourceType": "module"
    },
    "rules": {
      "sort-keys": 2,
      "space-before-function-paren": 0,
      "jsx-quotes": 0,
      "comma-dangle": [
        2,
        "always-multiline"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "comment-empty-line-before": null,
      "rule-empty-line-before": null,
      "number-leading-zero": null,
      "block-closing-brace-newline-after": null,
      "at-rule-empty-line-before": null,
      "length-zero-no-unit": null,
      "selector-list-comma-newline-after": null,
      "selector-pseudo-element-colon-notation": null,
      "no-descending-specificity": null,
      "block-opening-brace-space-before": "never-single-line",
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "/^lost-/"
          ]
        }
      ],
      "at-rule-no-unknown": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "cpx": "^1.5.0",
    "cssnext": "^1.8.4",
    "eslint": "^5.0.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "node-sass": "^4.9.0",
    "parcel-bundler": "^1.9.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-line-height-px-to-unitless": "^0.2.1",
    "postcss-modules": "^1.1.0",
    "postcss-preset-env": "^5.1.0",
    "rsync": "^0.6.1"
  },
  "dependencies": {
    "gsap": "^2.0.1",
    "hammerjs": "^2.0.8",
    "stylelint-config-standard": "^18.2.0"
  }
}
